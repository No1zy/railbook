<% form_for(@book) do |f| %>
  <% f.select :publish, ['技術評論社', '翔泳社', '日経BP社'],
    {  include_blank: '選択してください' }, class: 'pub' %><br>
      <select class="pub" name="book[publish]" id="book_publish">
        <option value="" >選択してください</option>
        <option selected="selected" value="技術評論社" >技術評論社</option>
        <option value="翔泳社" >翔泳社</option>
        <option value="日経BP社" >日経BP社</option>

    <% f.select :publish, 
      { '技術評論社' => 1, '翔泳社' => 2, '日経BP社' => 3 }%><br>
<% end %>
